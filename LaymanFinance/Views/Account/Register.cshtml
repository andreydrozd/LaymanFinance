@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Layman Finance</title>
    <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/4.0.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div id="user-form">
        <h2 class="font-weight-normal text-center">Register</h2>
        <form asp-action="register" asp-controller="account" method="post" class="form-signin">
            <div class="form-label-group mb-1">
                <input type="text" name="firstname" class="form-control" placeholder="First Name" required autofocus />
            </div>
            <div class="form-label-group mb-1">
                <input type="text" name="lastname" class="form-control" placeholder="Last Name" required />
            </div>
            <div class="form-label-group mb-1">
                <input type="email" name="username" class="form-control" placeholder="Email Address" required />
            </div>
            <div class="form-label-group mb-1">
                <input type="number" name="phonenumber" class="form-control" placeholder="Phone Number" required />
            </div>
            <div class="form-label-group mb-1">
                <input type="password" name="password" class="form-control" placeholder="Password" required>
            </div>
            <div class="account-related-btns">
                <input type="submit" value="Register" class="btn" />
            </div>
        </form>
        <div asp-validation-summary="All"></div>
    </div>
</body>
</html>
