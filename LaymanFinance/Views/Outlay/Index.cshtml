@model LaymanFinance.Models.Outlay
@{
    ViewData["Title"] = "Outlay";
}

<h1>Gaze at your outlays.</h1>
<div class="row">
    <div class="col-2">
        <h4>Date</h4>
    </div>
    <div class="col-2">
        <h4>Amount</h4>
    </div>
    <div class="col-2">
        <h4>Payee</h4>
    </div>
    <div class="col-4">
        <h4>Memo</h4>
    </div>
    <div class="col-2">
        <h4>Category</h4>
    </div>
</div>

<div class="row">
    <div class="col-2">
        <p>@Model.DateOccurred</p>
    </div>
    <div class="col-2">
        <p>@Model.Amount.ToString("c")</p>
        @*
            This is done when the model property is nullable.
            <p>@(Model.Amount.HasValue ? @Model.Amount.Value.ToString("c") : "No Value")</p>
        *@
    </div>
    <div class="col-2">
        <p>@Model.Payee</p>
    </div>
    <div class="col-4">
        <p>@Model.Memo</p>
    </div>
    <div class="col-2">
        <p>@Model.Category.Name</p>
    </div>
</div>